{
  "name": "vue-dark-switch",
  "version": "0.2.0",
  "description": "多合一的开箱即用 vue3 暗黑模式开关组件",
  "main": "./dist/index.umd.js",
  "module": "./dist/index.es.js",
  "types": "./dist/exports.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.umd.js",
      "import": "./dist/index.es.js",
      "types": "./dist/exports.d.ts"
    },
    "./*": "./*"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build-js": "vite build",
    "prepublishOnly": "npm run build",
    "build-types": "vue-tsc -p tsconfig.build.json",
    "play": "pnpm -C examples/vite-project run dev",
    "build": "npm-run-all --parallel build-js build-types",
    "play:build": "pnpm -C examples/vite-project run build",
    "play:preview": "pnpm -C examples/vite-project run preview",
    "release": "bumpp --commit --push --tag && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dishait/vue-dark-switch.git"
  },
  "keywords": [
    "switch",
    "dark",
    "theme"
  ],
  "license": "MIT",
  "author": {
    "name": "markthree",
    "email": "1801982702@qq.com",
    "url": "https://github.com/markthree"
  },
  "devDependencies": {
    "@iconify-json/line-md": "^1.1.20",
    "@types/node": "^18.11.18",
    "@vicons/material": "^0.12.0",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vueuse/core": "^9.9.0",
    "bumpp": "^8.2.1",
    "naive-ui": "^2.34.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.9.4",
    "unocss": "^0.48.0",
    "vite": "^4.0.3",
    "vue": "^3.2.45",
    "vue-tsc": "^1.0.18"
  },
  "peerDependencies": {
    "vue": ">=3.0.0"
  }
}
